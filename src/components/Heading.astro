---
import Layout from "../layout/Layout.astro";
---

<header class="header">
    <div class="container">
        <p class="name">Carlos Reyes</p>
        <nav class="list">
            <ul>
                <li>
                    <a href="http://localhost:4321/#about">Inicio</a>
                    <a href="http://localhost:4321/#experiencia">Experiencia</a>
                    <a href="http://localhost:4321/#proyectos">Proyectos</a>
                    <a href="http://localhost:4321/#habilidades">Habilidades</a>
                </li>
                <li class="space">
                    <a href="/" class="contact">Contacto</a>
                </li>
            </ul>
        </nav>
    </div>
</header>

<script>
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function(e) {
        e.preventDefault();

        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
            window.scrollTo({
                top: target.offsetTop,
                behavior: 'smooth'
            });
        }
    });
});

</script>

<style>
    .header {
        background-color: rgba(36, 37, 37, 0.7) !important;
        background: transparent;
        border-bottom: 1px solid #444646;
        backdrop-filter: blur(10px);
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        display: flex;
        flex-direction: column;
        z-index: 100;
    }

    .container {
        max-width: 900px;
        display: flex;
        margin-inline: auto;
    }

    .name {
        font-family: "Inter", sans-serif;
        color: #e5e0d8;
        font-weight: bold;
    }

    p {
        color: #5baae8;
        font-family: "Inter", sans-serif;
        font-size: 1.2rem;
    }

    ul {
        list-style: none;
        display: flex;
    }

    a {
        text-decoration: none;
        color: #e5e0d8;
        font-family: "Inter", sans-serif;
        font-size: 0.9rem;
        margin: 0 10px;
    }
    
    a:hover {
        opacity: 0.4;
        transition: 0.2s;
    }

    .contact {
        font-weight: 500;
        font-size: 1rem;
        color: #5baae8;
    }

    nav {
        margin-left: 40px;
        width: 580px;
        margin: 0 auto;
    }

    .space {
        margin-left: 80px;
    }
</style>
